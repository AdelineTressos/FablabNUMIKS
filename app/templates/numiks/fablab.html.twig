{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/styles/numiksPage/fablab.css') }}">
{% endblock %}

<section id="sectionFablab">
    <div class="container text-center">
        <div class="row">
            <div class="col">
                <h1 id="titleSectionFablab">Espace Fablab Numiks</h1>
            </div>
        </div>
    </div>

    <div class="container" id="containerPresentation">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img id="imgSectionFablab" src="https://icones.pro/wp-content/uploads/2021/06/symbole-d-image-bleue-300x300.png" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title" id="TitleTextFablab">Présentation du Fablab Numiks</h4>
                        <p class="card-text" id="TextFablab">Texte présentation du Fablab Numiks</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

   <div class="container-fluid">
    <div class="row justify-content-center" id="rowMemberTeam">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card mb-3" id="cardPresentationEquipe">
                <div class="card-body">
                    <h5 class="card-title">Présentation de l'équipe</h5>
                    <p class="card-text">Texte de présentation de l'équipe</p>
                </div>
            </div>
        </div>

  {% for i in 1..4 %}
    <div class="col-5 col-md-4 col-lg-2" id="colEmployer">
        <div class="card mb-3" id="cardEmployer{{ i }}" style="width: 8rem;">
            <div class="card-body" id="cardBodyEmployer">
                <img src="https://icones.pro/wp-content/uploads/2021/06/symbole-d-image-bleue-300x300.png" class="card-img-top" alt="Photo de l'employé">
                <h5 class="card-title">Employé {{ i }}</h5>
                <p class="card-text">Description de l'employé {{ i }}</p>
            </div>
        </div>
    </div>
{% endfor %}

    </div>
   </div>
</section>
