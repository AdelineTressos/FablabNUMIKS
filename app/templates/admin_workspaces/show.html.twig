{% extends 'adminTemplatePage.html.twig' %}


{% block title %}Détails de l'espace de travail
{% endblock %}

{% block main %}
	<div class="container mt-5 animate__animated animate__fadeInLeftBig">
		<h1>Détails de l'espace de travail:
			{{ workspace.nameWorkspace }}</h1>
		<div class="mb-3">
			<strong>Description:</strong>
			{{ workspace.description ? workspace.description : 'Pas de description disponible' }}
		</div>
		<div class="mb-3">
			<strong>Accès Membre:</strong>
			{{ workspace.memberAccess ? 'Oui' : 'Non' }}
		</div>
		<div class="mb-3">
			<strong>Réservé:</strong>
			{{ workspace.isBooked ? 'Oui' : 'Non' }}
		</div>
		<a href="{{ path('admin_workspaces_edit', {'id': workspace.id}) }}" class="btn btn-primary">Éditer</a>
		<a href="{{ path('app_admin_workspaces') }}" class="btn btn-secondary">Retour à la liste</a>
		<form action="{{ path('admin_workspaces_delete', {'id': workspace.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet espace de travail ?');" style="display: inline-block;">
			<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ workspace.id) }}">
			<button type="submit" class="btn btn-danger">Supprimer</button>
		</form>
	</div>
{% endblock %}
