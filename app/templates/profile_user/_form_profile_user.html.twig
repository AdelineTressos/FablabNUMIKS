{{ form_start(form) }}
<div class="card-body">
    <div class="mb-2 table-responsive">
        <table class="table table-striped table-borderless">
            <tbody>
                <tr>
                    <th>Identifiant adhérent</th>
                    <td>{{ user.username }}</td>
                </tr>  
                <tr>
                    <th>Nom</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Date de naissance</th>
                    <td>{{ user.birthday|date('d-m-Y')}}</td>
                </tr>
                {% if user.nameOrganization != null %}
                <tr>
                    <th>Nom de l'entreprise ou de l'association</th>                
                    <td>{{ user.nameOrganization }}</td>               
                </tr>
                    {% if user.num_siret != null %}
                        <tr>
                            <th>Numéro de SIRET</th>                
                            <td>{{ user.num_siret }}</td>               
                        </tr>
                    {% endif %}
                {% endif %}
                <tr>
                    <th>Adresse mail</th>
                    <td>{{ form_widget(form.email) }}</td>
                </tr>
                <tr>
                    <th>Mot de passe</th>
                    <td>********</td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                        <td>{{ form_widget(form.phone) }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ form_widget(form.street) }}</td>
                </tr>
                <tr>
                    <th>Complément d'adresse</th>
                    <td>{{ form_widget(form.adress_complement) }}</td>
                </tr>
                <tr>
                    <th>Code Postal</th>
                    <td>{{ form_widget(form.postalcode) }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ form_widget(form.city) }}</td>
                </tr>            
                <tr>
                    <th>Date de première adhésion</th>
                    {% if user.firstMembership != null %}
                        <td>{{ user.firstMembership|date('d-m-Y') }}</td>
                    {% else %}
                        <td>Non renseigné</td>
                    {% endif %}
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="container text-center mb-3">
    <button class="btn btn-custom">Enregistrer</button>
    {{ form_end(form, {render_rest: false}) }}
    <button class="btn btn-secondary"><a class="a-profile" href="{{ path('app_users_show', {'id': user.id}) }}">Annuler</a></button>
</div>