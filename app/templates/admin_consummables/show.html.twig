{% extends 'adminTemplatePage.html.twig' %}

{% block title %}Détails des consommables
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('assets/styles/consummables.css') }}">
{% endblock %}

{% block main %}
<a role="button" class="btn btn-outline-primary btn-sm" href="{{ path('app_admin_consummables_index') }}" style="border-radius:10%;">
    < Retour </a>

	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h4 class="text-center">Détails des consommables</h4>
					</div>
					<div class="card-body">
						<table class="table">
							<tbody>
								<tr>
									<th>Id</th>
									<td>{{ consummable.id }}</td>
								</tr>
								<tr>
									<th>Nom du consommable</th>
									<td>{{ consummable.nameConsummable }}</td>
								</tr>
								<tr>
									<th>Quantité</th>
									<td>{{ consummable.quantity }}</td>
								</tr>
								<tr>
									<th>Seuil limite</th>
									<td>{{ consummable.threshold }}</td>
								</tr>
							</tbody>
						</table>
						<div class="mt-4 d-flex justify-content-between align-items-center">
							<div>
								<a href="{{ path('app_admin_consummables_edit', {'id': consummable.id}) }}" class="btn btn-custom me-2">Modifier</a>
								
							</div>
                            {{ include('/admin_consummables/_delete_form.html.twig', { 'class': 'd-inline-block' }) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
