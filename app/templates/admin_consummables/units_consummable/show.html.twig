{% extends 'adminTemplatePage.html.twig' %}

{% block title %}Détail de l'Unité Consommable{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/categorieAdmin.css') }}">
    <!-- Assurez-vous d'inclure le CSS de Bootstrap ici si ce n'est pas déjà fait dans le parent -->
{% endblock %}

{% block main %}
<a role="button" class="btn btn-outline-primary btn-sm" href="{{ path('app_units_consummable_index') }}" style="border-radius:10%;">
    < Retour </a>

    <div class="container-fluid mt-5">
        <div class="text-center">
            <h1>Détail de l'Unité Consommable</h1>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="table-secondary">Id</th>
                        <td>{{ units_consummable.id }}</td>
                    </tr>
                    <tr>
                        <th class="table-secondary">Nom de l'unité</th>
                        <td>{{ units_consummable.nameUnit }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="text-center d-flex justify-content-between mt-3">
            <a class="btn create-new-link" href="{{ path('app_units_consummable_edit', {'id': units_consummable.id}) }}">Modifier</a>
            {{ include('/admin_consummables/units_consummable/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
