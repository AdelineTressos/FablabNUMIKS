{% extends 'adminTemplatePage.html.twig' %}

{% block title %}CatConsummables{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/categorieAdmin.css') }}">
{% endblock %}

{% block main %}
<a role="button" class="btn btn-outline-primary btn-sm" href="{{ path('app_cat_consummables_index') }}" style="border-radius:10%;">
    < Retour </a>

    <div class="container-fluid mt-5">
        <h1 class="text-center mb-4">Détails de la Catégorie de Consommables</h1>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="text-uppercase" scope="row">Identifiant</th>
                    <td>{{ cat_consummable.id }}</td>
                </tr>
                <tr>
                    <th class="text-uppercase" scope="row">Nom de la Catégorie</th>
                    <td>{{ cat_consummable.nameCategory }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_cat_consummables_edit', {'id': cat_consummable.id}) }}" class="btn create-new-link mx-2">Modifier</a>
            {{ include('/admin_consummables/cat_consummables/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
