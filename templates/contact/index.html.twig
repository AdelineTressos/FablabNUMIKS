<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Kokot Bank</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css">
    <style> 
    body {
            padding-top: 56px; /* Pour compenser la hauteur de la barre de navigation fixe */
            background-image: url("./images/fond5.png");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center; 
            background-size: cover;
            width: 95%;
            margin-left: 2em;
        }

    .jumbotron {
        text-align: center;
        margin-top: 5em;
    }

    .imgPoule{
        width: 150px;
        height: auto;
    }

    .footer {
        text-align: center;
        padding: 10px 0;
        background-color: #f5f5f5;
        bottom: 0;
        width: 100%;
        margin-top: 5em;
    }
    </style> 
</head>
<body>

    <header>
        <!-- Barre de navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a href="{{ path('home') }}"><img src="{{ asset('./images/logoKOKOTBANK.png') }}" alt="logo kokotbank" class="imgPoule" /></a>
        <a class="navbar-brand" href="#">
        Votre Banque est là pour vous</a>
            <!-- Liens de navigation -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">À propos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                </li>
            </ul>
        </nav>
    </header>

    <main role="main" class="container">
        <!-- Contenu principal -->
        <div class="jumbotron">
            <h1>Contactez KokotBank ici</h1>
        </div>
    </main>


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
            
            <div class="mb-3">
                {{ form_label(form.nom, 'Name', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.prenom, 'Prenom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prenom) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.message, 'Message', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.message) }}
            </div>
            
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
    <footer class="footer">
        <!-- Pied de page -->
        <div class="container">
            <span class="text-muted">KokotBank &copy; 2023</span>
        </div>
    </footer>
</body>
</html>

