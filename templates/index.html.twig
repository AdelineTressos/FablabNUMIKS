<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Kokot Bank</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css">
    
    <style> 
body {
    padding-top: 56px; /* Pour compenser la hauteur de la barre de navigation fixe */
    background-image: url("./images/fond5.png");
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center; 
    background-size: cover;
}

.jumbotron {
    text-align: center;
    margin-top: 5em;
}

.compte {
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
    margin-bottom: 20px;
}

.compte h2 {
    margin-top: 0;
}

.compte ul {
    list-style: none;
    padding: 0;
}

.compte li {
    margin-bottom: 10px;
}

.numero-compte {
    font-weight: bold;
}

.solde {
    color: green;
}

.imgPoule{
        width: 150px;
        height: auto;
    }

.footer {
    text-align: center;
    padding: 10px 0;
    background-color: #f5f5f5;
    position: fixed;
    bottom: 0;
    width: 115%;
}
    </style> 
</head>
<body>
    <header>
        <!-- Barre de navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a href="/"><img src="{{ asset('./images/logoKOKOTBANK.png') }}" alt="logo kokotbank" class="imgPoule" /></a>
        <a class="navbar-brand" href="#">
        Votre Banque est là pour vous</a>
            <!-- Liens de navigation -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('dashboard_accounts') }}">Mes Comptes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">À propos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                </li>
            </ul>
        </nav>
    </header>

    <main role="main" class="container">
        <!-- Contenu principal -->
        <div class="jumbotron">
            <h1>Bienvenue Chez KokotBank</h1>
            <p class="lead">Découvrez nos services bancaires en ligne. Connectez-vous ou inscrivez-vous :</p>
            <a class="btn btn-primary btn-lg" href="{{ path('app_login') }}" role="button">Se connecter</a>
            <a class="btn btn-primary btn-lg" href="{{ path('register') }}" role="button">S'enregistrer</a>
        </div>

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

    </div>
</main>
    </main>

    <footer class="footer">
        <!-- Pied de page -->
        <div class="container">
            <span class="text-muted">KokotBank &copy; 2023</span>
        </div>
    </footer>

</body>
</html>